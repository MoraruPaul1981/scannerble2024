<?xml version="1.0" encoding="utf-8"?>
        <com.google.android.material.card.MaterialCardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/id_card_server_mini_data_oncreateviewholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            android:textSize="10sp"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:cardBackgroundColor="#FFFAFA"
            app:strokeColor="#E3E8E6"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="5dp"
            app:strokeWidth="2dp"
            android:translationZ="5dp"
            android:animateLayoutChanges="true"
            tools:context=".presentationlayer.FragmentGattRecyclerView">


    <RelativeLayout
        android:id="@+id/id_relativeLayout_server_ble"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
  
        android:layout_margin="1dp"
        android:orientation="vertical">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/id_tabLayout_server_ble"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:elevation="3dp"
            app:tabMinWidth="100dp"
            app:tabIndicatorColor="#E1D9D9"
            app:tabIndicatorHeight="2dp"
            app:tabTextColor="#050505"
            app:tabSelectedTextColor="#10100F"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.Caption"
            android:padding="2dp">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabItem_server_ble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="девайс" />
        </com.google.android.material.tabs.TabLayout>












       <!-- //TODO:   namedevice  -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/id_textinputlayout_namedevice"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_below="@+id/id_tabLayout_server_ble"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
      
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            android:focusableInTouchMode="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/id_textinputtext_namedevice"
                android:inputType="textCapSentences|textMultiLine"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="14sp"
                android:hint="namedevice"
                android:text="namedevice value " />
        </com.google.android.material.textfield.TextInputLayout>




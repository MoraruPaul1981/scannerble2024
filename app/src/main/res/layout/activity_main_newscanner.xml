<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/id_cardViewblescanner"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:translationZ="1dp"
    android:padding="1dp"
    android:layout_margin="1dp"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentationlayer.MainActivityNewScanner">


<RelativeLayout
    android:id="@+id/id_relativecayoutscanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:tabMinWidth="150dp"
        android:background="#FFFFFF"
        app:tabIndicatorColor="#A6A3A2"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="#A6A3A2"
        app:tabSelectedTextColor="#A6A3A2"
        app:tabMode="fixed"
        android:visibility="visible"
        android:padding="2dp">


        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Девайс Bluetooth" />

    </com.google.android.material.tabs.TabLayout>


       <FrameLayout
           android:id="@+id/framelauoutbleprimary"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_above="@+id/ProgressBarscanner"
           android:layout_below="@+id/tabLayout"
           android:background="#FFFFFF" />

        <ProgressBar
            android:id="@+id/ProgressBarscanner"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_above="@+id/BottomNavigationViewScanner"
            android:background="#FFFFFF"
            android:layout_height="4dp"
            android:scaleY="3"
            android:scaleX="1"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:visibility="invisible" />



        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/BottomNavigationViewScanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#A6A3A2"
            app:itemTextColor="@color/black"
            android:scrollbarFadeDuration="150"
            android:translationZ="5dp"
            app:itemIconTint="#F2F5F5"
            android:layout_margin="5dp"
            android:padding="1dp"
            app:menu="@menu/menufornavigator_scanner"
            tools:ignore="MissingConstraints" />


</RelativeLayout>
</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentuserscanner"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:background="#F5FFFA"
    tools:context=".presentationlayer.MainActivityNewScanner">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardviewmatireacommitpay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="80dp"
        android:layout_margin="5dp"
        android:checkable="true"
        android:clickable="false"
        android:singleLine="false"
        android:focusable="true"
        android:textSize="10sp"
        app:cardBackgroundColor="#9EAFB3"


        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:strokeColor="#F5FFFA"
        app:cardMaxElevation="100dp"
        app:strokeWidth="0dp"
        android:translationZ="150dp"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/relativelayoutcardviewmatirealtask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">


            <TextView
                android:id="@+id/text0_innercardview_headmessage"
                android:layout_width="80dp"
                android:background="@drawable/dsu1_bootn_linescanner"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"
         
                android:layout_marginBottom="5dp"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="left"
                android:gravity="center_vertical"
                android:hint="Устройство"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text0_valuepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/text0_innercardview_headmessage"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="center"
                android:gravity="left|center_vertical"
                android:hint=" значение Устройство"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/text1_polamoneybudchetheader"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text0_valuepay"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/dsu1_bootn_linescanner"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="left"
                android:gravity="center_vertical"
                android:hint="MAC-адрес"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="normal"
                android:visibility="visible" />


            <TextView
                android:id="@+id/text3_valuepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text0_valuepay"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/text1_polamoneybudchetheader"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="center"
                android:gravity="left|center_vertical"
                android:hint=" значение MAC-адресс"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/text2_polamoneybudchetheader"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3_valuepay"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/dsu1_bootn_linescanner"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="left"
                android:gravity="center_vertical"
                android:hint="Время"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="normal"
                android:visibility="visible" />


            <TextView
                android:id="@+id/text2_valuepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3_valuepay"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/text2_polamoneybudchetheader"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="center"
                android:gravity="left|center_vertical"
                android:hint=" значение Время"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />






            <com.google.android.material.button.MaterialButton
                android:id="@+id/BottomFor_task_deseble_otkas_commitpay"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_below="@+id/text2_valuepay"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="auto"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|center_vertical"
                android:textColor="#0E0E0E"
                android:textSize="8sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="visible"
                app:cornerRadius='40dp'
                tools:visibility="visible" />



        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>



</LinearLayout>
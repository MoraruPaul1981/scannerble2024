<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_materialcardview_simple_gatt_scan"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:translationZ="1dp"
    android:layout_margin="5dp"
    android:textSize="10sp"
    app:cardBackgroundColor="#FFFAFA"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:strokeColor="#F5FFFA"
    app:cardMaxElevation="2dp"
    app:strokeWidth="1dp"
    android:animateLayoutChanges="true"
    tools:context=".presentationlayer.MainActivityNewScanner">



    <RelativeLayout
        android:id="@+id/id_relativeLayout_fragment_boot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/id_materialbutton_enter_and_exit_employee"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="center"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="15dp"
            app:cornerRadius='150dp'
            app:backgroundTint="#BDC6C8"
            android:translationZ="2dp"
            app:rippleColor="#5765B3"
            app:strokeColor="#F5FFFA"
            app:strokeWidth="1dp"
            android:hint="#статус задачи" />



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/id_cardViewblescanner"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:translationZ="1dp"
    android:padding="1dp"
    android:layout_margin="1dp"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentationlayer.MainActivityNewScanner">


<RelativeLayout
    android:id="@+id/id_relativecayoutscanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">







        <ImageView
            android:id="@+id/id_imageviewbootscanner"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:textSize="26sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:srcCompat="@drawable/icon_main_forserverscanners1" />






    <ProgressBar
        android:id="@+id/progressBarFace"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:indeterminate="true"
        android:indeterminateTint="#020202"
        android:max="100"
        android:progress="1"
        android:progressTint="#FFFFFF"
        android:textAlignment="center"
        android:textDirection="firstStrong"
        android:visibility="visible" />

</RelativeLayout>
</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simple_task_for_Tasks"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:background="#F5FFFA"
    tools:context=".Windows.MainActivityNewScanner">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardviewmatirealtask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:checkable="true"
        android:clickable="true"
        android:singleLine="false"
        android:focusable="true"
        android:textSize="10sp"
        app:cardBackgroundColor="#F0F8FF"


        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:strokeColor="#F5FFFA"
        app:cardMaxElevation="100dp"
        app:strokeWidth="0dp"
        android:translationZ="150dp"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/relativelayoutcardviewmatirealtask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">


            <TextView
                android:id="@+id/text0_innercardview_headmessage"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="500dp"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="center"
                android:gravity="left|center_vertical"
                android:hint="Нет устройств"
                android:minHeight="25dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textColorHint="#0A524B"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="visible" />




        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>



</LinearLayout>
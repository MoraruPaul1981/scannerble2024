<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/id_cardView_fragment_boot"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:translationZ="5dp"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentationlayer.MainActivityNewScanner">



    <RelativeLayout
        android:id="@+id/id_relativeLayout_fragment_boot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">




    <ImageView
        android:id="@+id/textViewZnak"
        android:layout_centerInParent ="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="false"
        android:textSize="26sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:srcCompat="@drawable/icon_main_scanner_boot1" />



    <ProgressBar
        android:id="@+id/progressBarFace"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
        android:layout_below="@+id/textViewZnak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:indeterminate="true"
        android:indeterminateTint="#A6A3A2"
        android:max="100"
        android:progress="1"
        android:progressTint="#FFFFFF"
        android:textAlignment="center"
        android:textDirection="firstStrong"
        android:visibility="visible" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

